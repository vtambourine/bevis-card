.card
  $height = 300px
  $width = 1.5 * $height
  /*$arrow-side = 0.58 * $height*/
  $arrow-side = $height/1.41
  $arrow-offset = 0.25 * $height
  $border-color = #fd0
  $border-width = 3px

  position absolute
  top 50%
  left 50%
  width $width
  height $height
  margin-left -($width / 2)
  margin-top -($height / 2)

  transition transform .5s ease-in-out
  transform rotateX(180deg)
  backface-visibility: hidden;
  &._visible
    transform rotateX(0deg)

  &__self
    display inline-block
    width $width
    height $height
    text-align left
    background-color white
    border-color $border-color
    border-width $border-width 0 $border-width $border-width
    border-style solid
    cursor pointer

    &:before
      display block
      content ''
      position absolute
      top 45px
      right -112px
      width $arrow-side
      height $arrow-side
      transform scaleX(0.61) rotate(-45deg)
      background-image linear-gradient(-45deg, white 0, white 50%, transparent 50%)
      border-color $border-color
      border-width 0 $border-width $border-width 0
      border-style solid

  &__lang
    font-size 35px
    position absolute
    top -22px
    left -17px
    text-align center

  logo()
    float left
    width 165px
    height 100%
    background transparent 27px center no-repeat

  &__logo-ru
    logo()
    background-image url('yandex-logo-ru.svg')

  &__logo-en
    logo()
    background-image url('yandex-logo-en.svg')

  &__title
    min-height 98px
    margin-top 30px

  &__name
    font-weight normal
    font-size 27px
    margin 0

  &__position
    font-weight normal
    font-size 14px
    line-height 1
    margin 0

  &__contact
    margin-bottom 10px
