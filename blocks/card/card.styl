.card
  $width = 540px
  $height = 300px
  $border-top-width = 0.5*$height
  $border-left-width = 0.15*$width

  position absolute
  top 50%
  left 50%
  width $width
  height $height
  margin-left -($width / 2)
  margin-top -($height / 2)

  transition transform .5s ease-in-out
  transform rotateX(180deg)
  backface-visibility: hidden;
  &._visible
    transform rotateX(0deg)

  &__self
    display inline-block
    width 0.85*$width
    height $height
    margin-left -($border-left-width)
    text-align left
    background-color white

    &:before
      float right
      display block
      width 0
      margin-right -($border-left-width)
      content ''
      border-width $border-top-width 0 $border-top-width $border-left-width
      border-color transparent transparent transparent white
      border-style solid
      background-color transparent

  &__lang
    position absolute
    top -20px
    left -20px
    width 40px
    height 40px
    background-color #bada55
    cursor pointer

  logo()
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background transparent 27px center no-repeat

  &__logo-ru
    logo()
    background-image url('yandex-logo-ru.svg')

  &__logo-en
    logo()
    background-image url('yandex-logo-en.svg')


  &__credential
    margin-left 165px

  &__title
    min-height 98px
    margin-top 30px

  &__name
    font-weight normal
    font-size 27px
    margin 0

  &__position
    font-weight normal
    font-size 14px
    line-height 1
    margin 0

  &__contact
    margin-bottom 10px
